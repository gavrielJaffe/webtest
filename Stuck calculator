<script> 
  function cal()
                {
                  var StuckNum = parseInt(document.getElementById("StuckNumber").value);
                  var Price = parseInt(document.getElementById("resultIs").value);
                  var resultIs = document.getElementById("result");
                  resultIs.value = Price/StuckNum ;
                } 

